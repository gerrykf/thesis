const db = require('../config/database')

class HealthRecord {
    static async create(data) {
        const { userId, recordDate, weight, exerciseDuration, sleepHours, notes } = data
        const sql = `
            INSERT INTO health_records
            (user_id, record_date, weight, exercise_duration, sleep_hours, notes)
            VALUES (?, ?, ?, ?, ?, ?)
            ON DUPLICATE KEY UPDATE
            weight = VALUES(weight),
            exercise_duration = VALUES(exercise_duration),
            sleep_hours = VALUES(sleep_hours),
            notes = VALUES(notes)
        `
        const [result] = await db.execute(sql, [
            userId, recordDate, weight, exerciseDuration, sleepHours, notes
        ])
        return result.insertId
    }

    static async findByUserId(userId, page = 1, limit = 10) {
        const offset = (page - 1) * limit
        const sql = `
            SELECT * FROM health_records
            WHERE user_id = ?
            ORDER BY record_date DESC
            LIMIT ? OFFSET ?
        `
        const [rows] = await db.execute(sql, [userId, limit, offset])
        return rows
    }

    static async findByUserIdAndDate(userId, date) {
        const sql = 'SELECT * FROM health_records WHERE user_id = ? AND record_date = ?'
        const [rows] = await db.execute(sql, [userId, date])
        return rows[0]
    }
}

module.exports = HealthRecord
